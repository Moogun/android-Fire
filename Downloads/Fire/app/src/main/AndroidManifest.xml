<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toomtoome.fire">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name="com.toomtoome.fire.Service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name="com.toomtoome.fire.Service.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <activity android:name="com.toomtoome.fire.Library.CourseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.toomtoome.fire.Library.DetailActivity"></activity>
        <activity android:name="com.toomtoome.fire.Profile.ProfileActivity"></activity>
        <activity android:name="com.toomtoome.fire.Profile.AccountSettingsActivity"></activity>
        <activity android:name="com.toomtoome.fire.Login.LoginActivity"></activity>
        <activity android:name="com.toomtoome.fire.Login.RegisterActivity"></activity>
        <activity android:name="com.toomtoome.fire.QuestionList.QuestionListActivity"></activity>
        <activity android:name="com.toomtoome.fire.NewQuestion.NewQuestionActivity"></activity>
        <activity android:name="com.toomtoome.fire.Preview.PreviewActivity"></activity>
        <activity android:name="com.toomtoome.fire.Wordbook.WordbookActivity"></activity>
        <activity android:name="com.toomtoome.fire.NewQuestion.QuestionPhotoActivity"></activity>
        <activity android:name="com.toomtoome.fire.Search.SearchActivity"></activity>

    </application>

    <!-- Include following permission if you load images from Internet -->
    <uses-permission android:name="android.permission.INTERNET" />


    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- Include following permission if you want to cache images on SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />




</manifest>